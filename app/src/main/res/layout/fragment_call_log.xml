<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.sgztech.callblocker.view.CallLogFragment">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_call_log"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/call_log_card_view"/>

    <TextView
            android:id="@+id/tv_empty_call_log_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Large"
            android:visibility="gone"
            android:text="@string/call_log_list_empty" />

</FrameLayout>